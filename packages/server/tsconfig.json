{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2017",
    "outDir": "./build",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
